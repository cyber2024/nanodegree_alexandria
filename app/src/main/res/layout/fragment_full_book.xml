<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="it.jaschke.alexandria.AddBook">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookTitle"
            android:textSize="@dimen/head_line"
            android:textIsSelectable="true"
            android:textStyle="bold"
            android:paddingRight="20dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookCover"
            android:contentDescription="@string/book_cover"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/bookTitle"
            android:layout_alignLeft="@+id/bookTitle"
            android:layout_alignStart="@+id/bookTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookSubTitle"
            android:maxLines="5"
            android:ellipsize="end"
            android:layout_alignTop="@+id/bookCover"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"/>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookDesc"
            android:maxLines="7"
            android:ellipsize="end"
            android:layout_below="@+id/bookSubTitle"
            android:layout_alignLeft="@+id/bookTitle"
            android:layout_alignStart="@+id/bookTitle"
            android:layout_marginTop="35dp"
            android:layout_marginRight="10dp"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/cancel_button"
            android:drawableLeft="@drawable/ic_action_discard"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookDesc"
            android:layout_alignRight="@+id/cancel_button"
            android:layout_alignEnd="@+id/cancel_button"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/categories"
                android:layout_alignTop="@+id/authors"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:gravity="left|top"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/authors"
                android:layout_weight="1"

                android:gravity="right|top"/>
        </LinearLayout>


    </RelativeLayout>
</FrameLayout>
